package com.skilldistillery.event.entitytests;

import javax.persistence.EntityManager;
import javax.persistence.EntityManagerFactory;
import javax.persistence.Persistence;

import org.junit.Test;
import org.junit.jupiter.api.AfterEach;
import org.junit.jupiter.api.BeforeEach;

import com.skilldistillery.event.entities.Prescription;

public class PrescriptionTest {
	
	private EntityManagerFactory emf;
	private EntityManager em;
	Prescription prescription;
	
	@BeforeEach
	public void setUp() throws Exception {
		emf = Persistence.createEntityManagerFactory("EventJPA");
		em = emf.createEntityManager();
		prescription = em.find(prescription.class, 1);
	}

	@AfterEach
	public void tearDown() throws Exception {
		em.close();
		emf.close();
	}
	
	@Test
	public void test_prescription_get_data_from_category_table() {
		prescription prescription = em.find(prescription.class, 1);
		assertNotNull(prescription);
		assertEquals(1, prescription.getId());
		assertEquals("Augustus Gibbons", prescription.getName());
		assertEquals("This seems dangerous", prescription.getContent());
	}

}
