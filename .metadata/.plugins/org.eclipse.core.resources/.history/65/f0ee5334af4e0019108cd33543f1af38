package com.skilldistillery.event.controllers;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.skilldistillery.event.services.ScheduleService;

@RestController
@RequestMapping("api")
public class ScheduleController {

	// Post Service
	@Autowired
	private ScheduleService ss;
	
	@GetMapping(path = "user/{uid}/schedule/{sid}")
	public Schedule index(@PathVariable("sid") Integer id) {
		return ss.getPostByCategoryId(id);
	}
	
}
