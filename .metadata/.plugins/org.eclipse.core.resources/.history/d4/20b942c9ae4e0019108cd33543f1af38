package com.skilldistillery.event.controllers;

import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.skilldistillery.event.entities.User;
import com.skilldistillery.event.services.ScheduleService;

@RestController
@RequestMapping("api")
public class ScheduleController {

	// Post Service
	@Autowired
	private ScheduleService ss;
	
	
	@GetMapping(path = "user/{uid}/schedule/{sid}")
	public Optional<User> select(@PathVariable int sid) {
		return ss.getById(sid);
	}
	
}
